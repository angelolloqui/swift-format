lint:
  rule-configurations:
    - NESTED_CODE_BLOCK_DEPTH: 6
    - CYCLOMATIC_COMPLEXITY: 15
    - NPATH_COMPLEXITY: 300
    - NCSS: 45
    - LONG_LINE: 120
  severity-thresholds:
    - critical: 0
    - major: 0
    - minor: 0
    - cosmetic: 0
  disable-rules:
    - high_cyclomatic_complexity
    - high_ncss
    - long_line
